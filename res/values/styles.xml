<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomActionBar">
        <item name="android:background">@drawable/actionbarbg</item>
    </style>

    <style name="CustomEditText" parent="">
        <item name="android:background">@color/editTextBackground</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:textColor">@color/editTextColor</item>

    </style>
    
    <style name="CustomPurpleButton">
        <item name="android:background">@drawable/purple_button</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/editTextColor</item>
    </style>
    <dimen name="CustomPurpleButtonHeight">40dp</dimen>
    
    <style name="ProfileListTitle">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/profileTitle</item>
                
    </style>
    
    <style name="ProfileListValue">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">7dp</item>

    </style>
    
</resources>