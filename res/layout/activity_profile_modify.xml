<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/profile_modify_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Név" />

    <EditText
        android:id="@+id/profile_modify_edittext_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/CustomEditText"  >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/profile_modify_textview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email cím" />

    <EditText
        android:id="@+id/profile_modify_edittext_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        style="@style/CustomEditText"  />

    <TextView
        android:id="@+id/profile_modify_textview_dateofbirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Születési dátum" />

    <EditText
        android:id="@+id/profile_modify_edittext_dateofbirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:onClick="onClickHandler"
        android:focusable="false"
        android:focusableInTouchMode="false"
        style="@style/CustomEditText" />

    <TextView
        android:id="@+id/profile_modify_textview_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nem" />

    <Spinner
        android:id="@+id/profile_modify_spinner_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:entries="@array/array_sex"
        style="@style/CustomEditText" />

    <Button
        android:id="@+id/profile_modify_button_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/CustomPurpleButtonHeight"
        android:text="Módosítások mentése"
        android:onClick="onClickHandler" 
        style="@style/CustomPurpleButton"
        android:layout_marginTop="10dp"/>
    
</LinearLayout>
