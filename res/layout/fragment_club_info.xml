<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/club_info_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/club_info_textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/club_info_imageview"
        android:layout_toRightOf="@+id/club_info_imageview"
        android:text="Szórakozóhely neve"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/club_info_textview_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/club_info_imageview"
        android:text="Szórakozóhely pontos címe" />
    
    <TextView
        android:id="@+id/club_info_textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/club_info_textview_address"
        android:inputType="textMultiLine"
        android:text="Szórakozóhely leírása" />

    <RatingBar
        android:id="@+id/club_info_ratingbar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/club_info_textview_name"
        android:layout_centerHorizontal="true"
        android:rating="3"
        android:onClick="onClickHandler" />
    
    
    
    
        <ImageButton
            android:id="@+id/phone_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="phoneCall"
            android:src="@drawable/ic_launcher" />

        <ImageButton
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/phone_call"
            android:layout_toRightOf="@+id/phone_call"
            android:onClick="message"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textViewServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/club_info_textview_description"
            android:layout_below="@+id/club_info_textview_description"
            android:layout_marginTop="15dp"
            android:text="Szolgáltatások" />

        <LinearLayout
            android:id="@+id/club_info_fragment_linear_layout_for_services"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewServices"
            android:layout_alignRight="@+id/club_info_textview_description"
            android:layout_below="@+id/textViewServices"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18dp" >

        </LinearLayout>

</RelativeLayout>
