<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/rating_list_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/rating_list_item_ratingbar"/>

    <RatingBar
        android:id="@+id/rating_list_item_ratingbar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         />

    <TextView
        android:id="@+id/rating_list_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.38"
        android:text="TextView"
        android:layout_below="@+id/rating_list_item_user_name"
        android:layout_marginTop="5dp"/>

</RelativeLayout>