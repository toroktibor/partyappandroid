<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CustomActionBar" >

        <TextView
        android:id="@+id/actionbar_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Árlista"
        android:textColor="@color/actionBarTextColor"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textSize="19sp"        
        />
       
    
        <ImageView
        android:src="@drawable/menu_add"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:scaleType="centerInside"        
        android:id="@+id/actionbar_menu_button_a"
        android:layout_alignParentRight="true"  		                       
        android:text="Hozzáadás" />
        
       <ImageView
        android:src="@drawable/menu_xls"
        android:background="?attr/actionBarItemBackground"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:scaleType="centerInside"        
        android:id="@+id/actionbar_menu_button_b"
        android:layout_toLeftOf="@+id/actionbar_menu_button_a" 		                       
        android:text="XLS Import" />
       

    


</RelativeLayout>